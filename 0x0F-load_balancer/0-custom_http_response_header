#!/usr/bin/env bash

# Update the package lists and upgrade installed packages
sudo apt-get update
sudo apt-get upgrade -y

# Install Nginx if not already installed
sudo apt-get install -y nginx

# Configure custom HTTP response header in Nginx
echo 'server {
    listen 80 default_server;
    server_name _;

    location / {
        add_header X-Served-By $hostname;
        proxy_pass http://myapp;
    }
}' | sudo tee /etc/nginx/sites-available/default > /dev/null

# Remove the default Nginx default site configuration
sudo rm -f /etc/nginx/sites-enabled/default

# Create a symbolic link to the custom site configuration
sudo ln -s /etc/nginx/sites-available/default /etc/nginx/sites-enabled/

# Restart Nginx to apply the changes
sudo service nginx restart

# Ensure Nginx starts on boot
sudo systemctl enable nginx

# Print a message to indicate completion
echo "Configuration completed for web-02."
